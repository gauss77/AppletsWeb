    		<arg value="${ajaxcore.dir}/HttpRequest.js"/>
    		<arg value="${ajax.src.dir}/net/sf/j2s/ajax/HttpRequest.js"/>

        	<classpath>
        		<pathelement path="bin"/>
        	</classpath>
        </java>
    </target>

