<project name="j2s.core.build" default="j2s.pack.lib" basedir=".">
    <description>
            Building j2s-core-*.z.js
    </description>
	
	<property name="jcore.src.dir" value="../net.sf.j2s.java.core/src"/>
	<property name="js.src.dir" value="../net.sf.j2s.java.core/bin"/>
